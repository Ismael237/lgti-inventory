# Application Configuration
DOMAIN_NAME="example.com"
BUILD_TARGET="production"

# Database Configuration
# These credentials will be used to initialize the MySQL database
MYSQL_DATABASE_NAME="directus"
MYSQL_ROOT_PASSWORD="change_this_root_password"
MYSQL_USER="directus"
MYSQL_PASSWORD="change_this_password"

# Directus Admin Configuration
# These credentials will be used for the first admin user
DIRECTUS_SECRET_PHRASE="change_this_secret_phrase"
DIRECTUS_ADMIN_EMAIL="admin@example.com"
DIRECTUS_ADMIN_PASSWORD="change_this_admin_password"

# API Configuration
# The URL where your API will be accessible
PUBLIC_API_URL="http://localhost:8055"
PUBLIC_API_TOKEN="your_api_token_here"

# CORS Configuration
# Add all allowed origins, separated by commas
CORS_ENABLED=true
CORS_ORIGIN="http://localhost,http://localhost:3000"

# Session Cookie Configuration
# TTL: Time To Live for the session cookie
SESSION_COOKIE_TTL="1d"
SESSION_COOKIE_SECURE="false"
SESSION_COOKIE_SAME_SITE="lax"
SESSION_COOKIE_NAME="your_session_token_name"

CREATE_SNAPSHOT_FLOW_ID="your_create_snapshot_flow_id"